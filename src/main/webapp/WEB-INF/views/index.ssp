<!DOCTYPE html>

<html>
    <head>
        <link rel="stylesheet" href="/webjars/bootstrap/3.3.5/css/bootstrap.css" />
    </head>
    <body>

        <div class="container">
            <h1><em>Gene Expression</em> Connectivity Map</h1>

            <p>Query Signatures</p>
            <div class="row">
                <div class="col-md-6"><p id="query-signature-dropdown"></p></div>
                <div class="col-md-6"><p>Edit the signature here (possibly?)</p></div>
            </div>
        </div>

        <script type="text/javascript">
        var xmlHttpRequest = new XMLHttpRequest();

        xmlHttpRequest.onreadystatechange = function() {
                printQueryStringNames(JSON.parse(xmlHttpRequest.responseText));
        }

        xmlHttpRequest.open("GET", "http://localhost:8080/querysignature", false);
        xmlHttpRequest.send();

        function printQueryStringNames(querysignatures) {
            var selectBox = document.createElement("select");
            for (var i = 0; i < querysignatures.length; ++i) {
                var opt = document.createElement("option");
                opt.appendChild(document.createTextNode(querysignatures[i].name));
                selectBox.appendChild(opt)
            }
            selectBox.className = "form-control"

            document.getElementById("query-signature-dropdown").appendChild(selectBox);
        }
        </script>
    </body>
</html>